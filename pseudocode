STORE

 sales(){
   start
     prompt for username
       get username
         display items_in_stock
           if item is wanted
             add to cart
           else if
             cancel
           end if
         end 
       end 
     end
   end 
  }

 pre_order(){
   start
     prompt username
       get username
         display items in data.pre_order
            if item is wanted add to cart
            else if cancel
           end if
         end
       end
     end
   end
  }

 items_in_stock(){
   start
     prompt for item code
       get iem code
         search data.stock for item code
           if item code visable
             print "item is in stock"
           else print"item not in stock"  
           end if
         end
       end
     end
   end
  }
 new_arivals(){
    start
      prompt for item code
        get item code
          save item code to data.items_in_stock
         end
       end
     end
   end
  }

  remove_item(){
    start
      prompt item code
        get item code
          prompt data.items_in_stock for item code
            remove item code from data.items_in_stock 
           end
         end
       end
     end
   end
  }

